@import "compass/reset";
@import "compass/css3";
@import "fonts.scss";

$font-global: 'Conv_MyriadPro-Regular';
$font-bold: 'Conv_MyriadPro-Bold';
$font-cond: 'Conv_MyriadPro-Cond';
$font-it: 'Conv_MyriadPro-CondIt';
$font-condBold: 'Conv_MyriadPro-BoldCond';

@mixin gradient($from-color, $to-color) {
    background-color: mix($from-color, $to-color); 
    background-image: -webkit-gradient
      (linear, 0% 0%, 0% 100%, from($from-color), to($to-color));
    background-image: -webkit-linear-gradient
      (top, $from-color, $to-color); 
    background-image:    -moz-linear-gradient
      (top, $from-color, $to-color);
    background-image:     -ms-linear-gradient
      (top, $from-color, $to-color);
    background-image:      -o-linear-gradient
      (top, $from-color, $to-color);
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient
      (startColorStr='$from-color', EndColorStr='$to-color')";
}
.nm {
	margin-right: 0 !important;
}
.center {
	text-align: center;
}
.link {			
	padding: 9px 32px; 
	@media screen and (max-width: 768px) {
		padding: 9px 10px;
	}
	&:hover {
		text-decoration: none;
	}	
	&.red, &.orange {						
		border: 1px solid white;
		color: hsl(0, 100%, 100%);
		display: block;		
		font-family: "Conv_MyriadPro-Bold";
		font-size: 0.938em;		
		margin: 0 auto;
		text-align: center;		
		text-transform: uppercase;
		width: 152px;		
		@media screen and (max-width: 768px) {
			font-size: 0.7em;
			width: 134px;
		}
	}
	&.red {
		background: url(../img/bg-button-red.jpg) left top no-repeat #b9363c;
	}
	&.orange {
		background: url(../img/bg-button-orange.jpg) left top no-repeat #ea432c;	
	}
}
.fix {
	clear: both;
}
.right {
	float: right;
}
body {
	background: url(../img/bg.png) repeat;
	font-family: $font-global;
	overflow-x: hidden;
}	
header {
	background-color: #f4f4f4;	
	.container {		
		.head {
			padding-bottom: 10px;
			.logo {
				border-right: 1px solid white;
				@media screen and(max-width: 768px) {
					border-right: 0px;
				}
				a {				
					display: block;
					height: 50px;
					margin-top: 10px;
					width: 213px;			
				}					
			}		
			.title {
				text-align: left;
				@media screen and (max-width: 992px) {
					text-align: right;
				}
				span {
					color: #00b6c9;
					display: block;
					font-size: 0.875em;
					text-transform: uppercase;
					margin-top: 28px;
					b {
						font-family: $font-bold;
					}
				}
			}			
			.marcas {
				margin-top: 24px;
				text-align: right;							
				@media screen and (max-width: 992px) {
					display: none;
				}
				@media screen and (max-width: 768px) {
					display: none;
				}
				figure {
					display: inline-block;					
				}
			}
		}		
	}	
}
.banner {	
	background-color: #474747;
	bottom: 0;
	position: fixed;
	z-index: 9;
	a {
		display: block;		
		margin: 10px;
		img {
			display: block;
			margin: 0 auto;				
		}
	}
}
.share {
	position: absolute;
	right: 0;
	top: 170px;
	@media screen and (max-width: 768px) { 
		display: none;
	}
	a {
		display: block;
		height: 41px;
		width: 34px;
	}	
}
div#menu {
	background-color: #00afc9;
	border-bottom: 1px solid #96a98f;
	.container {
		.row {		
			.menu-head {
				display: none;
				@media screen and (max-width: 768px) {
					display: block;
				}
				span.title {
					color: white;
					display: inline-block;
					font-size: 1.125em;
					padding: 6px;					
				}
				button {
					background-color: #5e9eb9;	
					margin: 0;
					.icon-bar {
						background-color: white;
					}				
				}
			}				
			nav {
				&.navbar-collapse {
					padding: 0;
				}
				ul {
					@media screen and (max-width:768px) {
						width: 100%;
					}
					li {
						border-right: 1px solid #b8e9f0;
						display: inline-block;
						position: relative;
						@media screen and (max-width:768px) {
							border-bottom: 1px solid white;
							width: 100%;
							&:last-child {
								border-bottom: none;
							}
						}
						&:last-child {
							border-right: none;
						}
						&:first-child {
							&.active {
								background-color: #f0c02a;
							}
						}
						&:first-child + li {
							&.active {
								background-color: #e04b8d;
							}
						}
						&:first-child + li + li {
							&.active {
								background-color: #8d6ba2;	
							}							
						}
						&:first-child + li + li + li  {
							&.active {
								background-color: #b9363c;
							}
						}		
						&:first-child + li + li + li + li {
							&.active {
								background-color: #4b3579;
							}
						}		
						&:first-child + li + li + li + li + li {
							&.active {
								background-color: #0866a2;
							}
						}
						&:first-child:hover {
							background-color: #f0c02a;
						}
						&:first-child + li :hover {
							background-color: #e04b8d;
						}
						&:first-child + li + li :hover {
							background-color: #8d6ba2;
						}
						&:first-child + li + li + li :hover {
							background-color: #b9363c;
						}						
						&:first-child + li + li + li + li :hover {
							background-color: #4b3579;
						}
						&:first-child + li + li + li + li + li :hover {
							background-color: #0866a2;
						}
						a, a:hover {
							color: white;
							text-decoration: none;							
						}						
						a {
							display: block;							
							font-family: $font-global;
							font-size: 0.938em;
							padding: 20px 17px;	
							@media screen and(max-width: 768px){								
								padding: 6px;
							}
							&:hover {
								background: url(../img/arrow-up-menu.png) center bottom no-repeat;								
							}						
						}						
					}
				}
			}
			.sponsor {
				text-align: right;
				@media screen and (max-width: 992px) {
					display: none;
				}
				@media screen and (max-width: 768px) {
					display: none;
				}
				span, img {
					display: inline-block;
					vertical-align: top;
				}
				span {
					color: white;
					font-size: 0.750em;
					padding: 12% 10px;
				}
			}
		}
	}
}
section.wrapp {
	.container {
		background-color: white;
		box-shadow: 0px 3px 3px #888888;
		padding-top: 10px;		
		.row {		
			.detalle {
				article {
					font-family: $font-global;
					padding: 16px;
					hgroup {
						h1 {
							color: #00b6c9;
							font-size: 1.313em;
						}
						date {											
							color: #474747;
							display: block;
							font-size: 0.750em;						
							margin: 5px 0;
						}
					}
					figure {
						background-color: #f4f4f4;
						border: 1px solid #00b6c9;
						padding: 5px;
						img {
							width: 100%;
						}
					}
					a, a:hover {
						color: #00b6c9;					
						text-decoration: underline;
					}
					h2 {
						font-size: 1.125em;					
						margin: 5px 0;
					}
					p {
						color: #888888;
						font-size: 0.875em;
						margin: 10px 0;
						text-align: justify;
					}
					i {
						font-family: $font-it;
					}
				}
			}
			.articulos {
				padding: 10px 16px;
				h1 {
					color: #00b6c9;
					font-family: $font-global;	
					font-size: 1.313em;			
					margin-bottom: 10px;					
					text-transform: uppercase;					
					b {
						font-family: $font-bold;
					}
				}
				h2 {
					color: #00b6c9;
					font-size: 1.313em;
					margin: 10px 0;			
					@media screen and(max-width: 768px) {
						font-size: 0.875em;
					}				
					b {
						font-family: $font-bold;					
					}
				}
				ul {
					padding: 10px 0;
					li {
						float: left;
						font-family: $font-global;
						height: auto;
						margin-bottom: 30px;
						margin-right: 7px;						
						max-height: auto;
						position: relative;								
						figure, aside {
							display: inline-block;						
						}
						figure {
							border: 1px solid #0ebacc;
							height: auto;
							max-width: 180px;
							padding: 4px;	
							position: relative;							
							@media screen and (max-width: 768px) {
								width: 35%;
							}
							img {
								width: 100%;
							}				
							img.border-impacto {
								bottom: -10px;
								left: -1px;			
								position: absolute;
								width: 11px;
							}	
						}
						aside {										
							vertical-align: top;						
							width: 60%;
							hgroup {							
								h3 {
									color: #00b6c9;
